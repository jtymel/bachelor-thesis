<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:thesui="urn:import:org.jboss.ci.tracker.client.widgets"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style src="style.css" />
    
    <g:DockLayoutPanel unit="EM">

        <g:north size="2.0">
            <g:FlowPanel>
                <g:Button ui:field="deleteCategorizationButton" styleName='{style.button}'>Delete group of parameterizations</g:Button>
                <g:Button ui:field="deleteCategoryButton" styleName='{style.button}'>Delete parameterization</g:Button>
                <g:Button ui:field="cancelButton" styleName='{style.closeButton}'>Close</g:Button>
            </g:FlowPanel>
        </g:north>

        <g:north size="18.0">
            <c:DataGrid ui:field='categorizationDataGrid' />
        </g:north>

        <g:center>
            <c:DataGrid ui:field='categoryDataGrid' />
        </g:center>

    </g:DockLayoutPanel>
</ui:UiBinder>