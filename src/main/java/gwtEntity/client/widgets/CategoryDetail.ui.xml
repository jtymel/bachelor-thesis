<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:thesui="urn:import:gwtEntity.client.widgets"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>

    </ui:style>
    
    <g:DockLayoutPanel unit="EM">
        <g:center>
            <g:HTMLPanel>
                <table style="width:50%">
                    <tr>
                        <td>
                            <g:Label>Name of category</g:Label>
                        </td>
                        <td>
                            <g:TextBox ui:field="categoryNameField" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Categorization</g:Label>
                        </td>
                        <td>
                            <g:ListBox ui:field="categorizationListField" />
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:center>

        <g:south size="2.0">
            <g:FlowPanel>
                <g:Button ui:field="saveButton">Save changes</g:Button>
                <g:Button ui:field="cancelButton">Cancel</g:Button>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>